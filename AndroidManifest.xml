<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="hopur2.BusMobile"
      android:versionCode="1"
      android:versionName="1.0">
    <application android:icon="@drawable/icon" android:label="@string/app_name">
    <uses-library android:name="com.google.android.maps" />
        <activity android:name=".BusMobile"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

<activity class=".LeidarTafla" android:name="LeidarTafla">
<intent-filter>
<action android:name="hopur2.BusMobile.WIEW_LeidarTafla" />
<category android:name="android.intent.category.DEFAULT" />
</intent-filter>
</activity>

<activity class=".FindBusStops" android:name="FindBusStops">
<intent-filter>
<action android:name="hopur2.BusMobile.FindBusStop.View" />
<category android:name="android.intent.category.DEFAULT" />
</intent-filter>
</activity>



<activity class=".RoutesMenu" android:name="RoutesMenu">
<intent-filter>
<action android:name="hopur2.RoutesMenu.View">
<category android:name="android.intent.category.DEFAULT" />
</action>
</intent-filter>
</activity>

<activity class=".MapMenu" android:name="MapMenu">
<intent-filter>
<action android:name="hopur2.MapMenu.View">
<category android:name="android.intent.category.DEFAULT" />
</action>
</intent-filter>
</activity>
    </application>
    <uses-sdk android:minSdkVersion="3" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" />
	<uses-permission android:name="android.permission.INTERNET" />

</manifest> 